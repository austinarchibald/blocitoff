<h5>Add a new item:</h5>

<%= form_for [user, item], remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, :class => 'form-control', placeholder: 'To-do item' %>
  </div>

  <div class="form-group">
    <%= f.submit "Add Item", :class => 'btn btn-primary' %>
  </div>
<% end %>
